{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Unittests",
            "cargo": {
                "args": [
                    "test",
                ],
                "filter": {
                    "name": "nt_native",
                    "kind": "lib"
                }
            },
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "RUST_BACKTRACE",
                    "value": "1"
                }
            ],
            "preLaunchTask": "${defaultBuildTask}",
            "internalConsoleOptions": "openOnFirstSessionStart",
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "File io tests",
            "cargo": {
                "args": [
                    "test",
                ],
                "filter": {
                    "name": "file_io",
                    "kind": "test"
                }
            },
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "RUST_BACKTRACE",
                    "value": "1"
                },
                {
                    "name": "NT_NATIVE_TEST_DIR",
                    "value": "${workspaceFolder}/../temp/"
                }
            ],
            "preLaunchTask": "${defaultBuildTask}",
            "internalConsoleOptions": "openOnFirstSessionStart",
        }
    ]
}